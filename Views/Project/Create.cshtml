@{
}
@using FinalProject.DTO
@model CreateProjectDto
    <div>
        <div>
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header"><h3 class="text-center font-weight-light my-4">Create Project</h3></div>
                                <div class="card-body">
                                    <form action="/Project/InsertProject">

                                        <div class="form-group">
                                            @Html.LabelFor(x => x.ProjectTitle)
                                            @Html.TextBoxFor(x => x.ProjectTitle, new { @class = "form-control", placeholder = "Project Title" })
                                            <span asp-validation-for="ProjectTitle" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            @Html.LabelFor(x => x.Description)
                                            @Html.TextBoxFor(x => x.Description, new { @class = "form-control", placeholder = "Project Description" })
                                            <span asp-validation-for="Description" class="text-danger"></span>
                                        </div>


                                        <div class="form-group">
                                            <label>Team Leader</label><br />
                                            <select class="js-select" name="TeamLeaderID" multiple>
                                                @foreach (var teamLeader in (List<TeamLeader>)ViewBag.teamLeaders)
                                                {
                                                    <option value="@teamLeader.Id">@(teamLeader.FirstName+" "+teamLeader.LastName)</option>
                                                }
                                            </select>
                                            <span asp-validation-for="TeamLeaderID" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <label>Developers</label><br />
                                            <select class="js-select" name="developersIds" multiple>
                                                @foreach (var developer in (List<Developer>)ViewBag.developers)
                                                {
                                                    <option value="@developer.Id">@(developer.FirstName+" "+ developer.LastName)</option>
                                                }
                                            </select>
                                            <span asp-validation-for="developersIds" class="text-danger"></span>
                                        </div>

                                        <button type="submit" class="btn btn-primary">Submit</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
    <script>
        $(document).ready(function () {
            $('.js-select').select2();
        });
    </script>
